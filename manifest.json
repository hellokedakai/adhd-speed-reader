{
  "name": "ADHD Speed Reader",
  "description": "Embolden first half of each word on a web page for easier and faster reading.",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "webNavigation",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "Click to activate",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/template-icon-16.png",
      "32": "/images/template-icon-32.png",
      "48": "/images/template-icon-48.png",
      "128": "/images/template-icon-128.png"
    }
  },
  "icons": {
    "16": "/images/template-icon-16.png",
    "32": "/images/template-icon-32.png",
    "48": "/images/template-icon-48.png",
    "128": "/images/template-icon-128.png"
  }
}